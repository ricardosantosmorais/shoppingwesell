@model List<Shopping.Dominio.Entidades.FormaPagamento>
@{
    ViewBag.Title = "Marca";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="box-products">
    <div class="Box-Identificacao">
    <h1>Forma de Pagamento <span class="BtaoNewCad"><a class="btn-AddCar" title="CADASTRAR NOVO" href="/Admin/FormaPagamento/Form/0">CADASTRAR NOVO</a></span></h1>
        </div>
    <br /><br /><br /><br />

    <table class="box-table">
        <tr>
            <th scope="col" width="50%">Nome</th>
            <th scope="col" width="30%">Desconto (%)</th>
            <th scope="col" align="center">Opções</th>
        </tr>
        @foreach(var item in Model) {
        <tr>
            <td>@item.Nome</td>
            <td>@item.PorcentagemDesconto</td>
            <td align="center"><a class="btn-AddCar btnEnt" title="EXCLUIR" href="/Admin/FormaPagamento/Form/@item.Id">Editar</a></td>
        </tr>
        }
    </table>

</div>

