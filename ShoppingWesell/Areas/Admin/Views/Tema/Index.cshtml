@model List<Shopping.Dominio.Entidades.Tema>
@{
    ViewBag.Title = "Tema";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="box-products">
    <div class="Box-Identificacao">
    <h1>Estilos <span class="BtaoNewCad"><a class="btn-AddCar" title="CADASTRAR NOVO" href="/Admin/Tema/Form/0">CADASTRAR NOVO</a></span></h1>
        </div>
    <br /><br /><br /><br />

    <table class="box-table">
        <tr>
            <th scope="col" width="50%">Nome</th>
            <th scope="col" width="30%">Arquivos</th>
            <th scope="col" align="center">Opções</th>
        </tr>
        @foreach(var item in Model) {
        <tr>
            <td>@item.Nome</td>
            <td>
                
                @foreach (var arq in item.TemaArquivo)
                {
                    Response.Write(arq.Nome + "<br>");
                }

            </td>
            <td align="center"><a class="btn-AddCar btnEnt" title="EDITAR" href="/Admin/Tema/Form/@item.Id">Editar</a></td>
        </tr>
        }
    </table>

</div>

