@model List<Shopping.Dominio.Entidades.AreaBanner>
@{
    ViewBag.Title = "Área Banner";
    Layout = "~/Views/Shared/_LayoutLojista.cshtml";
}

<div id="box-products">
    <div class="Box-Identificacao">
    <h1>Áreas dos Banners <span class="BtaoNewCad"><a class="btn-AddCar" title="CADASTRAR NOVO" href="/Lojista/AreaBanner/Form/0">CADASTRAR NOVO</a></span></h1>
        </div>
    <br /><br /><br /><br />

    <table class="box-table">
        <tr>
            <th scope="col" width="50%">Nome</th>
            <th scope="col" width="30%">Estilo</th>
            <th scope="col" align="center">Opções</th>
        </tr>
        @foreach(var item in Model) {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Estilo.Nome</td>
            <td align="center"><a class="btn-AddCar btnEnt" title="EXCLUIR" href="/Lojista/AreaBanner/Form/@item.Id">Editar</a></td>
        </tr>
        }
    </table>

</div>

