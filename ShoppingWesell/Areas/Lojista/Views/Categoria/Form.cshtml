@model Shopping.Admin.Models.CategoriaViewModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_LayoutLojista.cshtml";
}
<div id="box-products">
    <div class="Box-Identificacao">
    <h1>Cadastro de Categoria</h1>
        </div>
    <br /><br /><br /><br />
    <form action="/Lojista/Categoria/Salvar" method="post">
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.DataDaInclusao)
	<div class="divForm">
		<label>NOME DA CATEGORIA:</label>
		@Html.TextBoxFor(model => model.Nome, new { @class = "campo" })
		<label>SELECIONE AS SUBCATEGORIAS:</label>
		@Html.ListBoxFor(x => x.SubCategoriaSelecionadas, new MultiSelectList(new Shopping.InfraEstrutura.DAO.DAOSubCategoria().Listar(), "Id", "Nome"), new { @class = "textarea" })
		<label>DESCRIÇÃO:</label>
		@Html.TextAreaFor(model => model.Descricao, new { @class = "campo textarea" })
        <br /><br />
        @Html.CheckBoxFor(model => model.Ativo, new { @checked = "checked"}) &nbsp; Ativo
        <input type="submit" class="btn-AddCar Btn_End btnEnt btn-Form" value="Cadastrar" />
        <br /><br /><br />
	</div>
     </form>
</div>

